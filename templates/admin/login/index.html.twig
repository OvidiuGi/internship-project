{% extends 'base_admin.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('admin_login') }}" method="post" >
        <div class="mb-3">
            <label for="username" >Email:</label>
            <input type="email" class="form-control"  id="username" name="_username" aria-describedby="emailHelp" value="{{ last_username }}"/>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="_password"/>
        </div>
        <input type="hidden" name="_target_path" value="/admin"/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
